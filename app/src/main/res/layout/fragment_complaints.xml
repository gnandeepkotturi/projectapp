<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context=".Complaints">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complaint"
        android:textSize="35dp"
        android:textStyle="bold|italic|normal"
        android:textColor="@color/cardview_dark_background"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"

        />

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
        >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="30dp">

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Transport"
               android:id="@+id/comp_transport"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Equipment"
               android:id="@+id/comp_equip"
               />
           <Button
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Other   "
               android:id="@+id/comp_other"
               />

       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="1dp"
                android:layout_height="1000dp"
                android:background="#000"
                />
        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:visibility="invisible"
           android:id="@+id/complaintarealayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:id="@+id/complaintarea"
            />

           <DatePicker
               android:id="@+id/complaint_date"
               android:layout_width="wrap_content"
               android:layout_height="200dp"
               android:calendarViewShown="false"
               android:datePickerMode="spinner" />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Complaint area"
               android:inputType="textMultiLine"
               android:scrollbars="vertical"
               android:maxLines="10"
               android:background="@drawable/edittext"
               android:id="@+id/writecomplaint"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Submit"
               android:id="@+id/comsubmit"
               android:layout_marginLeft="20dp"
               />
        </LinearLayout>

        </LinearLayout>

   </LinearLayout>

